<Window x:Class="IntroductionEFCore.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroductionEFCore.Wpf" 
        xmlns:views="clr-namespace:IntroductionEFCore.Wpf.Views"
        mc:Ignorable="d"
        Title="Super fenêtre" Height="900" Width="1200" Background="DarkBlue">
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button x:Name="ButtonTestView" Content="TEST" Click="ButtonTestView_Click" />
            <Button x:Name="ButtonLookBetterView" Content="C'est mieux" Click="ButtonLookBetterView_Click" />
        </StackPanel>
        <DockPanel x:Name="DockPanelMain" Grid.Column="1">
            <views:TestView />
        </DockPanel>
        
    </Grid>
</Window>
